@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .header h1 {
        color: #007bff;
        font-weight: bold;
    }

    .brace-description {
        padding: 10px 20px; /* reduced top and bottom padding */
        border-radius: 10px;
    }

    .brace-items li {
        color: #362D2D;
        list-style-type: disc;
        margin-left: 20px;
    }

        .brace-items li:hover {
            color: #0056b3;
            cursor: pointer;
        }

    video {
        margin-top: 10px; /* reduced top margin */
    }

    .list-unstyled {
        list-style-type: none;
        padding-left: 0;
    }

        .list-unstyled li::before {
            content: '\2022'; /* Unicode for bullet point */
            color: #007bff;
            font-weight: bold;
            margin-right: 10px;
        }

</style>
<img src="/images/Braces.jpeg " style="width:100%" />
<div class="container">
    <div class="header text-center">
        <h1>Reliable Medical Braces</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="brace-description">
                Whether you've broken a bone or just require a brace to protect your joints during the next big game, Bear Creek Pharmacy has everything that you need. We carry a variety of medical braces, splints, casts and more.
            </div>
            <ul class="list-unstyled">
                <li>Podiatry</li>
                <li>Orthopedic</li>
                <li>Back</li>
                <li>Neck</li>
                <li>Elbow</li>
                <li>Knee</li>
                <li>Boot cast</li>
                <li>Bandaging</li>
                <li>Tape</li>
                <li>Splints</li>
                <li>Straps</li>
                <li>Heating pads</li>
            </ul>
        </div>
        <div class="col-md-6">
            <div class="container-fluid">
                <div class="text-center">
                    <video width="320" height="240" controls>
                        <source src="~/videos/bear-creek-pharmacy-llc-jbfpf8zz.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>
