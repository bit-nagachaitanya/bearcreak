@model IEnumerable<WebApplication14.Models.ReviewModel>

@{
    
 Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

}
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
        }

    .table {
            width: 80%; /* Adjust the width as needed */
            margin: 0 auto;
          
    border-collapse: collapse;
    border-spacing: 0;
    }
    .table th, .table td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    }
    .table th {
    background-color: #f2f2f2;
    font-weight: bold;
    }
    .table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
    }
    </style>
    
</head>


<center><h1>Bear Creek Pharmacy LLC Reviews</h1> </center>
<div style="display: flex;  align-items: center; justify-content: center;">

    <img src="/images/ratings.png" alt="img loading" height="130" width=" 450" />

    <a class="btn btn-danger btn-large" asp-action="Review" asp-controller="ReviewModels">Write a review</a>
</div>


<div> <center><h3>Here are few Recent Reviews</h3></center></div>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
           
            <th>Comments</th>
            <th>Ratings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Name</td>
                
                <td>@review.Comments</td>
                <td>@review.Ratings</td>
            </tr>
        }
    </tbody>
</table>
